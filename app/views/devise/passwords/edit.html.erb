<div class="card">
  <div class="card-header">
    <h2>Change your password ðŸ”‘</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <% f.label :password, "New password" %>
        <% if @minimum_password_length %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New password (#{@minimum_password_length} characters minimum)" %>
        <% else %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New password" %>
        <% end %>
      </div>

      <div class="field">
        <% f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %><br/>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    <% end %>

    <br/>

    <%= render "devise/shared/links" %>
  </div>
</div>