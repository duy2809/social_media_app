<div class="card">
  <div class="card-header">
    <h2>Sign up üìù</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <% f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name'%>
      </div>

      <div class="field form-group">
        <% f.label :age %><br />
        <%= f.number_field :age, class: 'form-control', placeholder: 'Age' %><br />
      </div>

      <div class="field form-group">
        <%= f.radio_button :gender, value: 0, class: 'form-check-input' %>
        <%= f.label :gender, 'Male', class: 'form-check-label' %>
      </div>

      <div class="field form-group">
        <%= f.radio_button :gender, value: 1, class: 'form-check-input' %>
        <%= f.label :gender, 'Female', class: 'form-check-label' %>
      </div><br />

      <div class="field form-group">
        <% f.label :avatar %>
        <%= f.file_field :avatar, class: 'form-control' %><br>
      </div>

      <div class="field form-group">
        <% f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Email' %><br />
      </div>

      <div class="field form-group">
        <% f.label :password %>
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "New password (#{@minimum_password_length} characters minimum)" %>
        <% else %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "New password" %>
        <% end %>
      </div>

      <div class="field form-group">
        <% f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Re-enter new password'  %>
        <br />
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
      <br/>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>